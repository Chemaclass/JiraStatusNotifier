#!/usr/bin/env php
<?php

declare(strict_types=1);

require dirname(__DIR__) . '/vendor/autoload.php';

use App\ScrumMaster\Command\IO\EchoOutput;
use App\ScrumMaster\Command\SlackNotifierCommand;
use App\ScrumMaster\Command\SlackNotifierInput;

$dotEnv = Dotenv\Dotenv::create(__DIR__ . '/..');
$dotEnv->load();

$command = new SlackNotifierCommand();
$command->execute(SlackNotifierInput::fromArray($_ENV), new EchoOutput());
